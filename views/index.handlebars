<div class="row">
    <div class="col-12">
        {{#if articles}} {{#each articles}}
        <div class="card w-90">
            <div class="card-header">
                <a href="{{link}}" target="_blank" class="text-dark">
                    <h2>{{title}}</h2>
                </a>
            </div>
            <div class="card-body">
                <p class="card-text">
                    {{summary}}
                </p>
                 {{#if byline}}&nbsp;
                <span>
                    <em>{{byline}}</em>
                </span> {{/if}}
                <button id="{{_id}}" class="btn btn-primary save-btn float-right">Save Article</button>
                <br>
                <span id="saveSuccess"></span>
            </div>
        </div>
        <br> {{/each}} {{else}}
        <div class="card w-90 p-1">
            <div class="card-body text-center">
                There are no new articles.
            </div>
        </div>
        {{/if}}
    </div>
</div>
